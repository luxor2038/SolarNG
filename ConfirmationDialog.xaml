<Window x:Class="SolarNG.ConfirmationDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" MinWidth="300" MinHeight="100" Background="{StaticResource bg1}" WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
  <StackPanel Margin="5,5,5,5">
    <TextBlock Name="TitleTextBox" Margin="10" Foreground="{StaticResource fg1}" HorizontalAlignment="Center" VerticalAlignment="Center" />
    <DockPanel Margin="0,10,0,0">
      <Button Name="BtnCancel" Content="{StaticResource No}" DockPanel.Dock="Right" IsCancel="True" Margin="10" Width="122" HorizontalAlignment="Right" Style="{StaticResource CustomWhiteButtonStyle}" Click="BtnCancel_Click" />
      <Button Name="BtnOk" Content="{StaticResource Yes}" DockPanel.Dock="Right" IsDefault="True" Margin="10" Width="122" HorizontalAlignment="Right" Style="{StaticResource CustomBlueButtonStyle}" Click="BtnOk_Click" />
    </DockPanel>
  </StackPanel>
</Window>