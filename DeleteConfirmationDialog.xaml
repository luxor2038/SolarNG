<Window x:Class="SolarNG.DeleteConfirmationDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStartupLocation="CenterScreen" Title="{StaticResource DeleteConfirmation}" SizeToContent="WidthAndHeight" MinWidth="300" MinHeight="100" Background="{StaticResource bg1}" WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
  <StackPanel Margin="5,5,5,5">
    <TextBlock Name="TitleTextBox" Margin="10" Foreground="{StaticResource fg1}" HorizontalAlignment="Center" VerticalAlignment="Center" PreviewKeyDown="On_KeyDown" KeyDown="On_KeyDown" KeyUp="On_KeyUp" />
    <DockPanel Margin="0,10,0,0">
      <Button Name="BtnCancel" DockPanel.Dock="Right" Content="{StaticResource Cancel}" IsCancel="True" Margin="10" Width="122" HorizontalAlignment="Right" Style="{StaticResource CustomWhiteButtonStyle}" PreviewKeyDown="On_KeyDown" KeyDown="On_KeyDown" KeyUp="On_KeyUp" Click="BtnCancel_Click" />
      <Button Name="BtnOk" DockPanel.Dock="Right" Content="{StaticResource Delete}" IsDefault="True" Margin="10" Width="122" HorizontalAlignment="Right" Style="{StaticResource CustomRedButtonWithBorderStyle}" PreviewKeyDown="On_KeyDown" KeyDown="On_KeyDown" KeyUp="On_KeyUp" Click="BtnOk_Click" />
    </DockPanel>
  </StackPanel>
</Window>